.poster
    display flex
    border 1px solid black
    padding-bottom 100px

    &-text
        width 70%
        text-align center

    &-img
    	width 30%

@media screen and (max-width: $mobile-width)
	.poster
		flex-direction column
		padding 30px 10px
		align-items center

		&-text
	        width 100%

	    &-img
	    	width 100%