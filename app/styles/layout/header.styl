.header
    background-color grey

    &-nav
        list-style-type none
        margin 0
        padding 0
        overflow hidden

        +below($mobile-width)
            font-size 10px

        &-logo
            float left
            padding 20px 20px

        &-item
            float right

            :hover
                background-color rgb(112, 92, 72)

            a
                display block
                color white
                text-align center
                padding 20px 20px
                text-decoration none
