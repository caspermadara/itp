.header
    background-color white

.nav
    list-style-type none
    margin 0
    padding 0
    overflow hidden
            
    .nav-logo
        display inline
        padding 30px 10px

        img
            height 70px

            +below(1075px)
                height 50px
                margin 15px 0

            +below(765px)
                display none

    .nav-item 
        float right
        
        /*+below(765px)
            отменить float и поставить посередине*/
        a
            display block
            color #5cb85c
            text-align center
            padding 30px 20px
            text-decoration none

            &:hover
                background-color #5cb85c
                color white