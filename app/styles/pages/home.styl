.poster
    position relative
    padding 20px 0
    background-image url("../images/student.png")
    background-repeat no-repeat
    background-size cover
    min-height calc(80vh - 88px)
    color white
    display flex
    align-items center
    justify-content center

    &-container
        display flex
        align-items center

        +below($mobile-width)
            flex-direction column
            align-items center

    &-text
        margin-left 30px
        z-index 1

        +below($tablet-width)
            font-size 20px

        +below($mobile-width)
            font-size 16px

    &-heading
        text-align center
        z-index 1

        +below($tablet-width)
            font-size 24px

.partners
    &-columns
        display flex
        justify-content space-between

        +below($tablet-width)
            flex-direction column


    &-column
        border 2px solid #5cb85c
        border-radius 10px
        padding 0 20px
        width 32%
        
        +below($tablet-width)
            width 100%
            margin-bottom 10px

        p
            font-size 20px
            margin-top 0
            margin-bottom 10px

        .partner-flag
            width 250px
            height 170px
            display block
            margin 20px auto

            +below($tablet-width)
                width 
                height 



.about
    &-header
        background-color #5cb85c
        padding 10px
        text-align center
    &-text
        text-align justify

    .courses
        display flex
        border 2px solid #5cb85c

        &-list-header 
            text-align center
            margin 20px 0