.poster
    position relative
    padding 20px 0
    background-image url("../images/student.png")
    background-repeat no-repeat
    background-size cover
    min-height calc(80vh - 88px)
    color white
    display flex
    align-items center
    justify-content center

    &-container
        display flex
        align-items center

        +below($mobile-width)
            flex-direction column
            align-items center

    &-text
        margin-left 30px
        z-index 1

    &-heading
        text-align center
        z-index 1

.about
    &-header
        background-color #5cb85c
        padding 10px
        text-align center
