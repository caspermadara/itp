.poster
    position relative
    padding 100px 0
    background-image url("../images/student.png")
    background-repeat no-repeat
    background-size cover
    height calc(100vh - 88px)
    color white

    &-background
        position absolute
        left 0
        right 0
        top 0 
        bottom 0
        background-color rgba(9, 49, 71, .6)

    &-container
        display flex

        +below($mobile-width)
            flex-direction column
            padding 30px 10px
            align-items center

    &-text
        margin-left 30px
        z-index 1

    &-heading
        text-align center
        z-index 1

.about
    &-header
        background-color #5cb85c
        padding 10px
        text-align center