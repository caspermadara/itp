.slider-item
    width: 250px
    height: 300px
    display: flex
    position: relative
    background-size cover !important

.description
    color: black
    text-decoration: none
    width: 100%
    text-align: center
    position: absolute
    bottom: 0
    background: rgba(255,255,255,0.7)

.slider-item-picture
    height 100%
    width 100%
    &:not(:first-of-type)
        display none

.description-header
    font-size: 24

.owl-carousel .owl-nav
    width:140px
    display:block
    margin:auto

.owl-carousel .owl-nav .owl-prev
    margin: 10px
    border-radius: 5px
    text-align:center
    display:inline-block
    width: 50px
    height: 25px
    background: #abbddb

.owl-carousel .owl-nav .owl-next
    margin: 10px
    border-radius: 5px
    text-align:center
    display:inline-block
    width: 50px
    height:  25px
    background: #abbddb

.partial-header
    text-align center
    font-family Arial
    font-size 24px


.owl-stage
    margin 0 auto
